#!/bin/sh

# POSIX-compliant-syntax functions meant for use in interactive shells.

# fmcd - file system navigation with a file manager
fmcd () {
	cd "$(command lf -print-last-dir "$@")" || return 1
}

# ffcd - fuzzy finder file system navigation
ffcd () {
	fmcd "$(command fd --type directory --color never | command fzf --tiebreak=length,end --scheme=path --preview='command ls {}' "$@")" || return 1
}

# image viewer that cycles through all the images in the current directory
imgv () {
	file=''
	if [ -f "$1" ];then
		file="$1"
		shift 1
	fi
	command rotdir "$file" | command nsxiv -i "$@" 2>/dev/null
	unset -v file
}

# git config files
config () {
	command git --git-dir="$HOME"/.configuration/ --work-tree="$HOME" "$@"
}

pconfig () {
	command git --git-dir="$HOME"/.private-configuration/ --work-tree="$HOME" "$@"
}
